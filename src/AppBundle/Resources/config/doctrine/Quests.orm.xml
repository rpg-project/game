<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Quests" table="quests">
    <indexes>
      <index name="place_idx" columns="placeId"/>
      <index name="pId_idx" columns="placeId"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="title" type="string" column="title" length="45" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="description" type="text" column="description" length="65535" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="chapter" type="integer" column="chapter" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="difficultyMax" type="integer" column="difficulty_max" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="difficultyMin" type="integer" column="difficulty_min" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="gloryReward" type="integer" column="glory_reward" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="goldReward" type="integer" column="gold_reward" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="xpReward" type="integer" column="xp_reward" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="bonusLaw" type="integer" column="bonus_law" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="bonusChaos" type="integer" column="bonus_chaos" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="bonusGood" type="integer" column="bonus_good" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="bonusEvil" type="integer" column="bonus_evil" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="levelMin" type="integer" column="level_min" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="startingZone" type="integer" column="starting_zone" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="dateInfo" type="datetime" column="date_info" nullable="true"/>
    <many-to-one field="placeid" target-entity="Places" fetch="LAZY">
      <join-columns>
        <join-column name="placeId" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
