{% extends 'base.html.twig' %}

{% block main %}
    <div class="container">
        <div class="row">
            <h1>{{ quest.title }}</h1>
            <table class="table text-center">
                <tr>
                    <th>Descrption</th>
                    <th>Niveau Requis</th>
                    <th>Récompense Gloire</th>
                    <th>Récompense XP</th>
                    <th>Récompenses Gold</th>
                </tr>
                <tr>
                    <td>{{ quest.description|raw }}</td>
                    <td>{{ quest.levelMin }}</td>
                    <td>{{ quest.GloryReward }}</td>
                    <td>{{ quest.xpReward }}</td>
                    <td>{{ quest.goldReward }}</td>
                </tr>
            </table>
        </div>

        <a href="javascript:history.go(-1)" class="btn btn-primary">Retour</a>
    </div>
{% endblock %}