{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h1>Equipe</h1>
                    <table class="table">
                        {% for key,mate in team %}
                            {% if mate == false %}
                                <tr>
                                    <th>Position {{ key }}</th>
                                    <td><a href="{{ path("options_team_choice", {'place' : key}) }}" class="btn btn-primary">Ajout Equipier {{ key }}</a></td>
                                </tr>
                            {% else  %}

                                    <tr>
                                        <th>Position {{ key }}</th>
                                        <td>{{ mate.name }}</td>
                                        <td><a href="" class="btn btn-primary">Remplacer</a></td>
                                        <td><a href="" class="btn btn-primary">Retirer</a></td>
                                        <td></td>
                                    </tr>

                            {% endif %}
                        {% endfor %}
                    </table>
            </div>

        </div>
        <div class="row">
            <a href="{{ path('player_homepage') }}" class="btn btn-primary">Retour</a>
        </div>

    </div>
{% endblock%}