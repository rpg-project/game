{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>Inventaire {{ character.name }}</h1>
        <div class="col-lg-4">
            <h4>Equipé</h4>
            <ul>
                {% for item in listEquiped %}
                    {% if item.contained == 0 %}
                        <li>{{ item.name }}</li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
        <div class="col-lg-6">
                <h4>Contenu du sac ( {{ count }} / {{ character.maxBagCapacity }})</h4>
                <table style="text-align:center;"><tr>
                {% for item in listIn %}

                        {% if item != false %}

                            <td style="border:2px solid rosybrown;width:40px;height: 40px;">
                                <img src="{{ asset(item.image) }}" width="40" title="{{ item.name }}">
                                <a href="" title="Voir les détails"><img src="{{ asset('images/loupe.jpg') }}" width="10"></a>
                                {% if item.type == 1 %}
                                    {% if character.level >= item.levelMin %}
                                        <a href="#" title="Equiper"><img src="{{ asset('images/casque.jpg') }}" width="15"></a></td>
                                    {% else %}
                                        <a href="#" title ="Niveau Requis : {{ item.levelMin }}"><img src="{{ asset('images/exclamation.png') }}" width="10"></a></td>
                                    {% endif %}
                                {% endif %}
                                {% if item.type == 3 %}
                                    {% if character.level >= item.levelMin %}
                                        <a href="#" title="Utiliser"><img src="{{ asset('images/main.png') }}" width="10"></a></td>
                                    {% else %}
                                        <a href="#" title ="Niveau Requis : {{ item.levelMin }}"><img src="{{ asset('images/exclamation.png') }}" width="10"></a></td>
                                    {% endif %}
                                {% endif %}
                        {% else %}
                            <td style="border:2px solid rosybrown;width:40px;height: 40px;"></td>
                        {% endif %}

                {% endfor %}
                    </tr>
                </table>

        </div>
        <div class="col-lg-2">
            <h4>Inventaire Suivants</h4>
            {% for mate in team %}
                <ul>
                    {% if mate.mate != false %}
                        <li><a href="{{ path('options_inventory_follower_see', {'id' : mate.mate.id}) }}">Inventaire {{ mate.mate.name }}</a></li>
                    {% endif %}
                </ul>
            {% endfor %}
        </div>
    </div>
    <div class="row">
        {% block follower %}
        {% endblock %}
    </div>
    <div class="row">
        <a href="javascript:history.go(-1)" class="btn btn-primary">Retour</a>
    </div>
</div>
{% endblock %}