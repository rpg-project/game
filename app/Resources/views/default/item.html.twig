{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <h1>{{ item.name }}</h1>
        <table class="table text-center">
            <tr>
                <th colspan="2">Objet</th>
                <th>Type de l'objet</th>
                <th>Niveau de l'objet</th>
                <th>Niveau Requis</th>
                <th>Qualité</th>
                <th>Bonus Déplacement</th>
                <th>Bonus Rapidté</th>
                <th>Bonus Attaque</th>
                <th>Bonus Défense</th>
                <th>Bonus Critique</th>
                <th>Bonus Santé</th>
                <th>Bonus Energie</th>
                <th>Poids</th>
            </tr>
            <tr>
                <td><img src="{{ item.image }}" width="40"></td>
                <td>{{ item.name }}</td>
                <td>{% for key, type in dico.typeItem %}
                        {% if item.type == type %}
                            {{ key }}
                        {% endif %}
                    {% endfor %}
                </td>
                <td>{{ item.level }}</td>
                <td>{{ item.levelMin }}</td>
                <td>{% for key, quality in dico.rate %}
                        {% if item.quality == quality %}
                            {{ key }}
                        {% endif %}
                    {% endfor %}</td>
                <td>{{ item.bonusMove }}</td>
                <td>{{ item.bonusQuickness }}</td>
                <td>{{ item.bonusAttack }}</td>
                <td>{{ item.bonusDefense }}</td>
                <td>{{ item.bonusCritical }}</td>
                <td>{{ item.bonusHealth }}</td>
                <td>{{ item.bonusEnergy }}</td>
                <td>{{ item.weigth }}</td>
            </tr>
        </table>
    </div>

    <a href="javascript:history.go(-1)" class="btn btn-primary">Retour</a>
</div>
{% endblock %}